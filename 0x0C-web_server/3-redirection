#!/usr/bin/env bash
# redirecting using 301 redirection
# installing Nginx on a remote server

sudo apt-get  update -y
sudo apt-get  install nginx -y
echo "Hello World!"  | sudo tee /var/www/html/index.html
sudo cp /etc/nginx/sites-available/default backup_config
new="location /redirect_me { return 301 https://youtube.com; }"
sudo sed -i "s|location / {|$new|" /etc/nginx/sites-available/default
sudo service nginx restart
